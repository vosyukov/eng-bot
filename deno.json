{
  "tasks": {
    "dev2": "deno run --allow-env --allow-net --allow-read  --watch  ./src/index.ts",
    "build": "deno compile --include=./src/static/p.txt --output ./dist/eng-bot --allow-net --allow-env --allow-read ./src/index.ts",
    "migrate:up": "drizzle-kit migrate",
    "migrate:down": "drizzle-kit rollback"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 125,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  },
  "compilerOptions": {
    "lib": ["esnext", "deno.ns", "dom"],
    "strict": true
  }
}
